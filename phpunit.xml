<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
         bootstrap="./package/plugin/test/php/autoload.php" colors="true">
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./package/plugin/src/php</directory>
        </include>
    </coverage>
    <testsuites>
        <testsuite name="Unit">
            <directory>./package/plugin/test/php/</directory>
        </testsuite>
    </testsuites>
</phpunit>
